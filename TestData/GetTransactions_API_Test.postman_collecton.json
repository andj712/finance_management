          "name": "Get All Transactions - Default Parameters",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Test status code",
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "// Test response time (relaxed for school project)",
                  "pm.test(\"Response time is less than 5000ms\", function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(5000);",
                  "});",
                  "",
                  "// Test content type",
                  "pm.test(\"Content-Type is application/json\", function () {",
                  "    pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"application/json\");",
                  "});",
                  "",
                  "// Parse response",
                  "const responseJson = pm.response.json();",
                  "",
                  "// Test response schema",
                  "pm.test(\"Response has correct schema\", function () {",
                  "    pm.expect(responseJson).to.have.property('total-count').that.is.a('number');",
                  "    pm.expect(responseJson).to.have.property('page-size').that.is.a('number');",
                  "    pm.expect(responseJson).to.have.property('page').that.is.a('number');",
                  "    pm.expect(responseJson).to.have.property('total-pages').that.is.a('number');",
                  "    pm.expect(responseJson).to.have.property('sort-order').that.is.a('string');",
                  "    pm.expect(responseJson).to.have.property('sort-by').that.is.a('string');",
                  "    pm.expect(responseJson).to.have.property('items').that.is.an('array');",
                  "});",
                  "",
                  "// Test default pagination values",
                  "pm.test(\"Default pagination values are correct\", function () {",
                  "    pm.expect(responseJson['page']).to.equal(1);",
                  "    pm.expect(responseJson['page-size']).to.equal(10);",
                  "});",
                  "",
                  "// Test transaction item schema if items exist",
                  "if (responseJson.items && responseJson.items.length > 0) {",
                  "    pm.test(\"Transaction items have correct schema\", function () {",
                  "        const firstItem = responseJson.items[0];",
                  "        pm.expect(firstItem).to.have.property('id').that.is.a('string');",
                  "        pm.expect(firstItem).to.have.property('date').that.is.a('string');",
                  "        pm.expect(firstItem).to.have.property('direction').that.is.a('string');",
                  "        pm.expect(firstItem).to.have.property('amount').that.is.a('number');",
                  "        pm.expect(firstItem).to.have.property('currency').that.is.a('string');",
                  "        pm.expect(firstItem).to.have.property('kind').that.is.a('string');",
                  "        pm.expect(firstItem).to.have.property('splits').that.is.an('array');",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
